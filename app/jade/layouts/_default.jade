doctype html
html(lang="en")
  head

    block head
      title Idea Starter

    include ../partials/_head

  body.default
    
    // START header
    include ../partials/_header
    // END header

    section#title
        .container
            block display_title
                h1 Idea Starter


    section.main
        .container
            .row
                .col-md-8#main-content
                    block content
                    
                .col-md-4#sidebar

                    block sidebar

                    .widget
                        h4.title 
                            span Join our FB page

                        .fb-like-box(data-href="https://www.facebook.com/pages/Idea-Starter/1375947472725385" data-width="360" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="true" data-show-border="false")



    // START footer
    include ../partials/_footer
    // END footer


    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
    
    // build:js /scripts/main.js
    script(src='/scripts/main.js')
    // endbuild

    // Facebook SDK
    div#fb-root
    script.
        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=298616493681455&version=v2.0";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));


    // Google Analytics
    include ../partials/_GA


